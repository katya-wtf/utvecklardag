extends ../../layouts/default

block content
	.container-sm: .pv-2
		h1!=errorTitle || 'Error (500)'
		if 'object' == typeof errorMsg
			div(style='margin: 30px 0;').debug!= htmlStringify(errorMsg)
		else
			p!= utils.textToHTML(errorMsg) || 'Ursäkta, servern påträffade ett problem.<br><br>Var god försök igen senare. Kontakta gärna oss ifall problemet kvarstår.'
		if err
			hr.mv-2
			h3 Error Details
			pre.mb-2: code
				if 'string' == typeof err
					!= utils.textToHTML(err)
				else
					!= htmlStringify(err)
